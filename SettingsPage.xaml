<?xml version="1.0" encoding="utf-8" ?>
<Page
	x:Class="Zscno.Trackora.SettingsPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	Loaded="Page_Loaded"
	mc:Ignorable="d">
	<Page.Resources>
		<Style TargetType="Expander">
			<Setter Property="HorizontalAlignment" Value="Stretch"/>
			<Setter Property="HorizontalContentAlignment" Value="Stretch"/>
			<Setter Property="IsExpanded" Value="True"/>
		</Style>
		<Style TargetType="FontIcon">
			<Setter Property="FontSize" Value="32"/>
			<Setter Property="Margin" Value="0,16,12,16"/>
		</Style>
	</Page.Resources>

	<ScrollViewer>
		<StackPanel Margin="36,0,36,16" Spacing="16">
			<InfoBar
				Name="CanNotSend"
				x:Uid="CanNotSend"
				IsClosable="False"
				Severity="Warning">
				<InfoBar.ActionButton>
					<Button x:Uid="CheckLog" Click="CheckLog_Click"/>
				</InfoBar.ActionButton>
			</InfoBar>
			<Expander>
				<Expander.Header>
					<RelativePanel>
						<FontIcon Name="PersonalizeIcon" Glyph="&#xE771;"/>
						<TextBlock
							x:Uid="PersonalizeTitle"
							Margin="0,16,16,16"
							RelativePanel.AlignVerticalCenterWith="PersonalizeIcon"
							RelativePanel.RightOf="PersonalizeIcon"
							Style="{StaticResource SubtitleTextBlockStyle}"/>
					</RelativePanel>
				</Expander.Header>
				<Expander.Content>
					<Grid Margin="48,16" RowSpacing="16">
						<Grid.RowDefinitions>
							<RowDefinition/>
							<RowDefinition/>
							<RowDefinition/>
							<RowDefinition/>
						</Grid.RowDefinitions>

						<ComboBox
							Name="TotalSoundPicker"
							x:Uid="TotalSoundPicker"
							Grid.Row="0"
							SelectionChanged="TotalSoundPicker_SelectionChanged"/>
						<Button
							x:Uid="Test"
							Grid.Row="0"
							HorizontalAlignment="Right"
							Click="TotalTest_Click"/>
						<ComboBox
							Name="ContinuousSoundPicker"
							x:Uid="ContinuousSoundPicker"
							Grid.Row="1"
							SelectionChanged="ContinuousSoundPicker_SelectionChanged"/>
						<Button
							x:Uid="Test"
							Grid.Row="1"
							HorizontalAlignment="Right"
							Click="ContinuousTest_Click"/>
						<ComboBox
							Name="EndUsingSoundPicker"
							x:Uid="EndUsingSoundPicker"
							Grid.Row="2"
							SelectionChanged="EndUsingSoundPicker_SelectionChanged"/>
						<Button
							x:Uid="Test"
							Grid.Row="2"
							HorizontalAlignment="Right"
							Click="EndUsingTest_Click"/>
						<ComboBox
							Name="ThemePicker"
							x:Uid="ThemePicker"
							Grid.Row="3"
							SelectionChanged="ThemePick_SelectionChanged"/>
					</Grid>
				</Expander.Content>
			</Expander>
			<Expander>
				<Expander.Header>
					<RelativePanel>
						<FontIcon Name="AboutIcon" Glyph="&#xE946;"/>
						<TextBlock
							x:Uid="AboutTitle"
							Margin="0,16,16,16"
							RelativePanel.AlignVerticalCenterWith="AboutIcon"
							RelativePanel.RightOf="AboutIcon"
							Style="{StaticResource SubtitleTextBlockStyle}"/>
					</RelativePanel>
				</Expander.Header>
				<Expander.Content>
					<Grid Margin="48,16">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="Auto"/>
							<ColumnDefinition/>
							<ColumnDefinition/>
						</Grid.ColumnDefinitions>

						<Image
							Grid.Column="0"
							Width="128"
							Height="128"
							Margin="0,0,12,0"
							VerticalAlignment="Top"
							Source="/Assets/AboutIcon.png"/>
						<StackPanel Grid.Column="1" VerticalAlignment="Center">
							<TextBlock Style="{StaticResource SubtitleTextBlockStyle}" Text="Trackora"/>
							<TextBlock Text="By Zscno"/>
							<TextBlock Name="Version"/>
							<HyperlinkButton
								Margin="0,8,0,0"
								Content="Github"
								NavigateUri="https://github.com/Zscno/Trackora"/>
						</StackPanel>
						<StackPanel Grid.Column="2" Spacing="16">
							<RelativePanel>
								<Button
									Name="CheckLog"
									x:Uid="CheckLog"
									Margin="0,0,8,0"
									Click="CheckLog_Click"/>
								<Button
									x:Uid="CleanCache"
									Click="CleanCache_Click"
									RelativePanel.RightOf="CheckLog"/>
							</RelativePanel>
							<TextBlock Name="CacheSize"/>
							<TextBlock x:Uid="CleanReminder" TextWrapping="WrapWholeWords"/>
						</StackPanel>
					</Grid>
				</Expander.Content>
			</Expander>
			<Expander>
				<Expander.Header>
					<RelativePanel>
						<FontIcon Name="DevelopIcon" Glyph="&#xEC7A;"/>
						<TextBlock
							x:Uid="DevelopTitle"
							Margin="0,16,16,16"
							RelativePanel.AlignVerticalCenterWith="DevelopIcon"
							RelativePanel.RightOf="DevelopIcon"
							Style="{StaticResource SubtitleTextBlockStyle}"/>
					</RelativePanel>
				</Expander.Header>
				<Expander.Content>
					<Grid
						Margin="48,16"
						ColumnSpacing="8"
						RowSpacing="16">
						<Grid.ColumnDefinitions>
							<ColumnDefinition/>
							<ColumnDefinition Width="Auto"/>
						</Grid.ColumnDefinitions>
						<Grid.RowDefinitions>
							<RowDefinition Height="Auto"/>
							<RowDefinition Height="Auto"/>
							<RowDefinition/>
						</Grid.RowDefinitions>

						<TextBox
							Name="FilterNames"
							x:Uid="FilterNames"
							Grid.RowSpan="2"
							Grid.Column="0"
							HorizontalAlignment="Stretch"
							TextWrapping="Wrap"/>
						<Button
							x:Uid="Reset"
							Grid.Row="0"
							Grid.Column="1"
							Click="Reset_Click"/>
						<Button
							Name="OK"
							x:Uid="OK"
							Grid.Row="1"
							Grid.Column="2"
							Click="OK_Click"/>
						<TextBlock
							Name="InputReminder"
							x:Uid="InputReminder"
							Grid.Row="2"
							Grid.ColumnSpan="3"
							TextWrapping="WrapWholeWords"/>
					</Grid>
				</Expander.Content>
			</Expander>
		</StackPanel>
	</ScrollViewer>
</Page>